{
  "builders": [{
    "name": "debian-1010-net",
    "vm_name": "debian-1010-net",
    "type": "vmware-iso",
    "guest_os_type": "debian9-64",
    "tools_upload_flavor": "linux",
    "headless": false,

    "iso_urls": [
        "ISO/debian-10.1.0-amd64-netinst.iso",
	"https://cdimage.debian.org/mirror/cdimage/archive/10.1.0/amd64/iso-cd/debian-10.1.0-amd64-netinst.iso"
      ],

    "iso_checksum": "7915fdb77a0c2623b4481fc5f0a8052330defe1cde1e0834ff233818dc6f301e",
    "iso_checksum_type": "sha256",

    "ssh_username": "debian",
    "ssh_password": "debian",
    "ssh_port": 22,
    "ssh_timeout": "20m",

    "disk_type_id": "thin",
    
    "format": "ovf",
    
    "ovftool_options": [
	"--allowExtraConfig",
	"--noSSLVerify"
    ],

    "floppy_files": [
      "../preseeds/debian1010.cfg"
    ],

    "boot_command": [
        "<esc><wait>",
        "install <wait>",
        " preseed/url=https://raw.githubusercontent.com/redbeard28/packer-examples/master/vsphere/preseeds/debian1010.cfg <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "<enter><wait>"
      ],

    "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'debian'|sudo -S sh 'shutdown.sh'",
    "vnc_disable_password": "true",

    "remote_type": "esx5",
    "remote_host": "{{user `esxi_host`}}",
    "remote_datastore": "{{user `esxi_datastore`}}",
    "remote_username": "{{user `esxi_username`}}",
    "remote_password": "{{user `esxi_password`}}",
    "keep_registered": true,

    "vmx_data": {
      "ethernet0.networkName": "VM Network",
      "memsize": "2048",
      "numvcpus":"2",
      "tools.upgrade.policy": "manual"
    }
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/ansible.sh",
      "execute_command": "echo 'debian' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    },{
      "type": "shell",
      "script": "scripts/playbook.sh"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    }
  ]
}
